<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_use_oil__parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    android:layout_marginLeft="@dimen/size_12"
    android:layout_marginRight="@dimen/size_12"
    android:background="@drawable/bg_rectangle_white_radius_3"
    android:orientation="vertical"
    android:padding="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/work_time" />

        <TextView
            android:id="@+id/item_running__time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/work_right_arrow"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_marginTop="@dimen/size_1"
            android:src="@mipmap/work_content" />

        <TextView
            android:id="@+id/item_running__mileage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_marginTop="@dimen/size_1"
            android:src="@mipmap/work_content" />

        <TextView
            android:id="@+id/item_running__remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/text_13" />

    </LinearLayout>
</LinearLayout>

