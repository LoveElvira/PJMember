<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.humming.pjmember.viewutils.roundview.RoundedImageView
        android:id="@+id/item_dialog_statistics__image"
        android:layout_width="@dimen/size_10"
        android:layout_height="@dimen/size_10"
        android:layout_marginRight="@dimen/size_5"
        app:riv_corner_radius="1dp" />

    <TextView
        android:id="@+id/item_dialog_statistics__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_10"
        android:textColor="@color/gray_888888"
        android:textSize="@dimen/text_11" />

    <TextView
        android:id="@+id/item_dialog_statistics__num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_888888"
        android:textSize="@dimen/text_12" />

</LinearLayout>