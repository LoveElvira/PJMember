<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_12">

                <TextView
                    android:id="@+id/activity_add_log__time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/activity_add_log__time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/activity_add_log__company_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/activity_add_log__company_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13" />

                    <EditText
                        android:id="@+id/activity_add_log__company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:lineSpacingMultiplier="1.2"
                        android:paddingBottom="@dimen/size_5"
                        android:paddingTop="@dimen/size_5"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@drawable/cursor_white"
                        android:textSize="@dimen/text_14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_add_log__type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/activity_add_log__type_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13" />

                    <EditText
                        android:id="@+id/activity_add_log__type_ed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingBottom="@dimen/size_5"
                        android:paddingTop="@dimen/size_5"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@drawable/cursor_white"
                        android:textSize="@dimen/text_14"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_add_log__type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingBottom="@dimen/size_5"
                        android:paddingTop="@dimen/size_5"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@drawable/cursor_white"
                        android:textSize="@dimen/text_14"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.5"
                        android:background="@color/white" />

                </LinearLayout>

                <TextView
                    android:id="@+id/activity_add_log__price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />

                <EditText
                    android:id="@+id/activity_add_log__price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/activity_add_log__content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />

                <EditText
                    android:id="@+id/activity_add_log__content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingBottom="@dimen/size_5"
                    android:paddingTop="@dimen/size_5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/cursor_white"
                    android:textSize="@dimen/text_14" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/activity_add_log__listview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_add_log__listview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_13" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/activity_add_log__listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10" />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_add_log__submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_30"
                    android:layout_marginLeft="@dimen/size_25"
                    android:layout_marginRight="@dimen/size_25"
                    android:layout_marginTop="@dimen/size_50"
                    android:background="@drawable/border_gray_radius_3"
                    android:gravity="center"
                    android:padding="@dimen/size_12"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <include layout="@layout/popupwindow_photo" />

</android.support.design.widget.CoordinatorLayout>