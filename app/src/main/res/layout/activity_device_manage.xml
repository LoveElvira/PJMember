<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.humming.pjmember.activity.scan.DeviceManageActivity">

    <include layout="@layout/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_devices_facility" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_12"
                    android:layout_marginLeft="@dimen/size_12"
                    android:layout_marginRight="@dimen/size_12"
                    android:layout_marginTop="@dimen/size_20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle_white_radius_3_alpha"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/activity_device_manage__repair_log_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_30"
                                android:layout_marginLeft="@dimen/size_12"
                                android:src="@mipmap/work_repair" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_weight="1"
                                android:text="维修记录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activity_device_manage__add_repair"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:padding="@dimen/size_15"
                            android:src="@mipmap/add" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/bg_rectangle_white_radius_3_alpha"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/activity_device_manage__maintain_log_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_30"
                                android:layout_marginLeft="@dimen/size_12"
                                android:src="@mipmap/work_maintain" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_weight="1"
                                android:text="保养记录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activity_device_manage__add_maintain"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:padding="@dimen/size_15"
                            android:src="@mipmap/add" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/bg_rectangle_white_radius_3_alpha"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/activity_device_manage__use_oil_log_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_30"
                                android:layout_marginLeft="@dimen/size_12"
                                android:src="@mipmap/work_use_oil" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_weight="1"
                                android:text="用油记录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activity_device_manage__add_use_oil"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:padding="@dimen/size_15"
                            android:src="@mipmap/add" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/bg_rectangle_white_radius_3_alpha"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/activity_device_manage__accident_log_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/size_30"
                                android:layout_height="@dimen/size_30"
                                android:layout_marginLeft="@dimen/size_12"
                                android:src="@mipmap/work_accident" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/size_10"
                                android:layout_weight="1"
                                android:text="事故记录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_14" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/activity_device_manage__add_accident"
                            android:layout_width="@dimen/size_50"
                            android:layout_height="@dimen/size_50"
                            android:padding="@dimen/size_15"
                            android:src="@mipmap/add" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>