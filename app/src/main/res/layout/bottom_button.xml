<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:layout_alignParentBottom="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_button__home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_button__home_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/home_select" />

            <TextView
                android:id="@+id/bottom_button__home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_3"
                android:text="首页"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_11" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_button__setting_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_button__setting_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/setting_default" />

            <TextView
                android:id="@+id/bottom_button__setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_3"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="@dimen/text_11" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>