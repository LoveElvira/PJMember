<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_home__left_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_home__left_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_30"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/work" />

                <ImageView
                    android:id="@+id/item_home__left_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_home__left_image"
                    android:src="@drawable/circle_red"
                    android:layout_marginLeft="-5dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/item_home__left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:text="作业管理"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_13" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/item_home__right_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_15"
            android:paddingBottom="@dimen/size_15">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_home__right_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_30"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/notify" />

                <ImageView
                    android:id="@+id/item_home__right_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_home__right_image"
                    android:src="@drawable/circle_red"
                    android:layout_marginLeft="-5dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <TextView
                android:id="@+id/item_home__right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:text="通知"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_13" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_home__bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/white" />

</LinearLayout>