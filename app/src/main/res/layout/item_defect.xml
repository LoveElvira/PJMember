<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_defect__parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_12"
    android:layout_marginRight="@dimen/size_12"
    android:layout_marginBottom="@dimen/size_10"
    android:background="@drawable/bg_rectangle_white_radius_3"
    android:orientation="vertical"
    android:padding="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/work_time" />

        <TextView
            android:id="@+id/item_defect__time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_weight="1"
            android:text="2017-8-22"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/work_right_arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_marginTop="@dimen/size_1"
            android:src="@mipmap/work_facility_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:text="设备名称："
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_13" />


        <TextView
            android:id="@+id/item_defect__facility_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="南浦大桥"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_marginTop="@dimen/size_1"
            android:src="@mipmap/work_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:text="位置描述："
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/text_13" />


        <TextView
            android:id="@+id/item_defect__address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="普陀区陕西北路1438号"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_15"
            android:layout_marginTop="@dimen/size_1"
            android:src="@mipmap/work_content" />

        <TextView
            android:id="@+id/item_defect__content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:lineSpacingMultiplier="1.2"
            android:text="缺陷描述：设备机器损坏，运转不灵记录文字，设备机器损坏，运转不灵。"
            android:textSize="@dimen/text_13" />

    </LinearLayout>
</LinearLayout>

