<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/size_12"
        android:layout_weight="1"
        android:background="@drawable/border_gray_radius_3">

        <ImageView
            android:id="@+id/fragment_setting__logo"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_15"
            android:layout_marginTop="@dimen/size_20"
            android:src="@mipmap/login_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_setting__head_image"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:src="@mipmap/home_default" />

            <TextView
                android:id="@+id/fragment_setting__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="昂盛"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/fragment_setting__company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="xxx分公司"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_20">

        <View
            android:id="@+id/fragment_setting__update_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:alpha="0.5"
            android:background="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/fragment_setting__update_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_12"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:src="@mipmap/password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_weight="1"
                android:text="更换职位"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:src="@mipmap/right_arrow" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:alpha="0.5"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/fragment_setting__update_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_12">

            <ImageView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:src="@mipmap/password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:src="@mipmap/right_arrow" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:alpha="0.5"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragment_setting__exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_30"
            android:layout_marginLeft="@dimen/size_25"
            android:layout_marginRight="@dimen/size_25"
            android:background="@drawable/border_gray_radius_3"
            android:gravity="center"
            android:padding="@dimen/size_12"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

</LinearLayout>