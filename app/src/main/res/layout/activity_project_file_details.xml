<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_15"
                android:paddingLeft="@dimen/size_15"
                android:paddingRight="@dimen/size_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rectangle_white_radius_3"
                    android:orientation="vertical"
                    android:padding="@dimen/size_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/size_15"
                                android:layout_height="@dimen/size_15"
                                android:layout_marginRight="@dimen/size_3"
                                android:src="@mipmap/affair_project_small" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="项目文件详情"
                                android:textColor="@color/blue_365DFE"
                                android:textSize="@dimen/text_13" />

                            <LinearLayout
                                android:id="@+id/activity_project_file_details__top_open_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/size_5"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/activity_project_file_details__top_open_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="展开"
                                    android:textColor="@color/blue_365DFE"
                                    android:textSize="@dimen/text_13" />

                                <ImageView
                                    android:id="@+id/activity_project_file_details__top_open_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/size_10"
                                    android:src="@mipmap/bottom_arrow" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_project_file_details__top_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/item_project_file_top" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/bg_rectangle_white_radius_3"
                    android:orientation="vertical"
                    android:padding="@dimen/size_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/size_15"
                                android:layout_height="@dimen/size_15"
                                android:layout_marginRight="@dimen/size_3"
                                android:src="@mipmap/affair_marking" />

                            <TextView
                                android:id="@+id/activity_project_file_details__middle_num"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="相关审批意见(0)"
                                android:textColor="@color/blue_365DFE"
                                android:textSize="@dimen/text_13" />

                            <LinearLayout
                                android:id="@+id/activity_project_file_details__middle_open_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/size_5">

                                <TextView
                                    android:id="@+id/activity_project_file_details__middle_open_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="展开"
                                    android:textColor="@color/blue_365DFE"
                                    android:textSize="@dimen/text_13" />

                                <ImageView
                                    android:id="@+id/activity_project_file_details__middle_open_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/size_10"
                                    android:src="@mipmap/bottom_arrow" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/activity_project_file_details__middle_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/bg_rectangle_white_radius_3"
                    android:orientation="vertical"
                    android:padding="@dimen/size_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/size_15"
                                android:layout_height="@dimen/size_15"
                                android:layout_marginRight="@dimen/size_3"
                                android:src="@mipmap/affair_suggestion" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="我的意见"
                                android:textColor="@color/blue_365DFE"
                                android:textSize="@dimen/text_13" />

                        </LinearLayout>

                        <EditText
                            android:id="@+id/activity_project_file_details__suggestion"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_80"
                            android:layout_marginTop="@dimen/size_10"
                            android:padding="@dimen/size_5"
                            android:background="@drawable/border_gray_radius_3"
                            android:gravity="top|left"
                            android:textColor="@color/gray_888888"
                            android:textColorHint="@color/gray_ADADAD"
                            android:textSize="@dimen/text_13" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10">

                    <TextView
                        android:id="@+id/activity_project_file_details__agree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_10"
                        android:layout_weight="1"
                        android:background="@drawable/border_gray_radius_3"
                        android:gravity="center"
                        android:padding="@dimen/size_12"
                        android:text="同意"
                        android:textColor="@color/gray_ADADAD"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/activity_project_file_details__reject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_gray_radius_3"
                        android:gravity="center"
                        android:padding="@dimen/size_12"
                        android:text="驳回"
                        android:textColor="@color/gray_ADADAD"
                        android:textSize="@dimen/text_14" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>