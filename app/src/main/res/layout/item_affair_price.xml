<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_affair_price__parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    android:layout_marginLeft="@dimen/size_12"
    android:layout_marginRight="@dimen/size_12"
    android:background="@drawable/bg_rectangle_white_radius_3"
    android:orientation="vertical"
    android:padding="@dimen/size_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用编号："
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_affair_price__num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申报部门："
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_affair_price__department"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用类型："
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_affair_price__type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款单位："
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_affair_price__receivables"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gray_ADADAD"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

</LinearLayout>