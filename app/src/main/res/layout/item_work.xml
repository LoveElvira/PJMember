<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_work__parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_12"
    android:layout_marginRight="@dimen/size_12"
    android:layout_marginTop="@dimen/size_10"
    android:background="@drawable/bg_rectangle_white_radius_3">

    <ImageView
        android:id="@+id/item_work__tip"
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_work__time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_15" />


            <TextView
                android:id="@+id/item_work__status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/work_right_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1"
                android:src="@mipmap/work_facility_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="作业编号："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />


            <TextView
                android:id="@+id/item_work__num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="设备名称："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />


            <TextView
                android:id="@+id/item_work__facility_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1"
                android:src="@mipmap/work_content" />

            <TextView
                android:id="@+id/item_work__content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/text_13" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

