<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_white_radius_3">

    <ImageView
        android:id="@+id/item_plan_middle__tip"
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45" />

    <LinearLayout
        android:id="@+id/item_plan_middle__parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_15"
        android:paddingBottom="@dimen/size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/work_time"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_plan_middle__time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/item_plan_middle__status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_facility_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="作业编号："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__work_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="作业名称："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__work_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="作业类型："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="设施名称："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__facility_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="作业时间："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__work_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:id="@+id/item_plan_middle__content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="负责人："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_15"
                android:layout_marginTop="@dimen/size_1_5"
                android:src="@mipmap/work_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:text="负责人电话："
                android:textColor="@color/gray_888888"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_plan_middle__phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_ADADAD"
                android:textSize="@dimen/text_13" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
