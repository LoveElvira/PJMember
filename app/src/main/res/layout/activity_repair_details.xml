<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.humming.pjmember.activity.scan.RepairDetailsActivity">

    <include layout="@layout/common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/base_toolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_12"
            android:background="@drawable/bg_rectangle_white_radius_3"
            android:orientation="vertical"
            android:padding="@dimen/size_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_facility_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="报修时间："
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_13" />


                <TextView
                    android:id="@+id/activity_repair_details__time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2017-08-04 16:58"
                    android:textColor="@color/gray_ADADAD"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_facility_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="设备名称："
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_13" />


                <TextView
                    android:id="@+id/activity_repair_details__facility_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修路挖掘机"
                    android:textColor="@color/gray_ADADAD"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="设备编号："
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_13" />


                <TextView
                    android:id="@+id/activity_repair_details__num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NO.123456"
                    android:textColor="@color/gray_ADADAD"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_content" />

                <TextView
                    android:id="@+id/activity_repair_details__content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:lineSpacingMultiplier="1.2"
                    android:text="维修内容：S26各收费站机点供电系统、收费系统、监控系统、通信系统保修故障维修。"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="维修金额："
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_13" />


                <TextView
                    android:id="@+id/activity_repair_details__price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¥299.00"
                    android:textColor="@color/gray_ADADAD"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/work_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:text="发票："
                    android:textColor="@color/gray_888888"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_repair_details__image"
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_10"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg" />


        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>